
<div class="page-header">
  <h1>Edit Profile<% @candidate.id %></h1>
</div>

<form action="/candidate/<%= @candidate.id %>/update">
  <div class="form-group">
    <label>Update Your Name:</label>
    <input value="<%= @candidate.name %>" name="name" type="text" class="form-control input-md" placeholder="Tina Goyal">
  </div>
  <div class="form-group">
    <label>Update Your Current Employer:</label>
    <input value="<%= @candidate.company %>"  name="company" type="text" class="form-control input-md"placeholder="Microsoft">
  </div>
  <div class="form-group">
    <label>Enter Your Current Role:</label>
    <input value="<%= @candidate.role %>" name="role"  type="text" class="form-control input-md"placeholder="Social Media Manager">
  </div>
    <div class="form-group">
    <label>Enter Your Current City:</label>
    <input value="<%= @candidate.city %>" name="city" type="text" class="form-control input-md"placeholder="Social Media Manager">
  </div>
  <div class="form-group">
    <label>Link to Your Photo:</label>
    <input value="<%= @candidate.photo_url %>" name="photo_url" type="text" class="form-control input-md" placeholder="http://....">
  </div>
  <button type="submit" class="btn btn-success btn-md">Submit</button>
  or
  <a href="/candidate">Cancel</a>
</form>
